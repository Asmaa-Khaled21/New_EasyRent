<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activitys.main.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Gray_White">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation" />


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:mbn_backgroundBottomColor="@color/Dark_Blue"
        app:mbn_countBackgroundColor="@color/Dark_Blue"

        app:mbn_countTextColor="#000"

        app:mbn_defaultIconColor="@color/white"
        app:mbn_rippleColor="@color/Orange"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="#5000" />

</RelativeLayout>