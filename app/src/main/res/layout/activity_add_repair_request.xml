<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:background="@color/white"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activitys.AddRepairRequestActivity">


    <LinearLayout
        android:id="@+id/logInLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="25dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Add Details"
            android:textColor="@color/Dark_Blue"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edit_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Details"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="@color/Dark_Blue"
            android:textColorHighlight="@color/Orange" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Date"
            android:textColor="@color/Dark_Blue"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Edit_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".8"
                android:gravity="start"
                android:hint="30/10/2022"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="10dp"
                android:textColor="@color/Dark_Blue"
                android:textColorHighlight="@color/Orange" />

            <ImageButton
                android:id="@+id/calendar_image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/white"
                android:gravity="end"
                android:src="@drawable/ic_day" />
        </LinearLayout>

        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Status"
            android:textColor="@color/Dark_Blue"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="statues" />

        <TextView
            android:id="@+id/Units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Units"
            android:textColor="@color/Dark_Blue"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_Units"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autofillHints="statues" />

        <TextView
            android:id="@+id/Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Notes"
            android:textColor="@color/Dark_Blue"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ADD_NOTES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NOtes"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="@color/Dark_Blue"
            android:textColorHighlight="@color/Orange" />

    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="ADD"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>